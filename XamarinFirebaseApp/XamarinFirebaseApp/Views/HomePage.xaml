<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFirebaseApp.Views.HomePage" NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Home Page"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Label Text="" x:Name="LblUser"
                   FontSize="Large"
                   VerticalOptions="Center"></Label>
            <Button Text="Student List"
                    x:Name="BtnStudentList"
                    Clicked="BtnStudentList_Clicked"></Button>
            <Button Text="Change Password" x:Name="BtnChangePassword" Clicked="BtnChangePassword_Clicked"></Button>
            <Button x:Name="Logout"
                    Text="Cerrar Sesión"
                    BackgroundColor="Black"
                    TextColor="white"
                    Clicked="Logout_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>